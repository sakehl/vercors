class Role {
  int v, temp;

  ensures Perm(v, 1) ** Perm(temp, 1);
  ensures v == x;
  constructor(int x) {
    v = x;
  }
}

requires x == 0 && y == 1;
choreography swap(int x, int y) {
  endpoint a = Role(0);
  endpoint b = Role(1);

  requires x == 0 && y == 1;
  context Perm(a.v, 1) ** Perm(a.temp, 1);
  context Perm(b.v, 1) ** Perm(b.temp, 1);
  requires a.v == 0 && b.v == 1;
  ensures a.v == 1 && b.v == 0;
  run {
    a.v := x;
    b.v := y;
    channel_invariant \msg == 0;
    communicate a.v -> b.temp;
    channel_invariant \msg == 1;
    communicate b.v -> a.temp;
    a.v := a.temp;
    b.v := b.temp;
  }
}